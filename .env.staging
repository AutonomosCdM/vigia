# Vigia Staging Environment Configuration

# API Keys (Required)
ANTHROPIC_API_KEY=your-staging-api-key-here
PERPLEXITY_API_KEY=your-staging-perplexity-key

# Supabase Configuration
SUPABASE_URL=your-staging-supabase-url
SUPABASE_KEY=your-staging-supabase-key

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-staging-twilio-sid
TWILIO_AUTH_TOKEN=your-staging-twilio-token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-staging-bot-token
SLACK_APP_TOKEN=xapp-your-staging-app-token

# Webhook Configuration
WEBHOOK_ENABLED=true
WEBHOOK_URL=http://localhost:8001/webhook
