# Vigia Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Twilio Configuration (Required for WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_FROM=whatsapp:+your-twilio-whatsapp-number
TWILIO_PHONE_FROM=+your-twilio-phone-number

# Anthropic Configuration (Required for AI)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Supabase Configuration
SUPABASE_URL=http://localhost:54321
SUPABASE_KEY=your-supabase-anon-key

# Slack Configuration (Optional)
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_SIGNING_SECRET=your-signing-secret

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
MODEL=claude-3-7-sonnet-20250219
MAX_TOKENS=64000
TEMPERATURE=0.2
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=30

# Webhook Configuration
WEBHOOK_ENABLED=false
WEBHOOK_URL=http://localhost:8001/webhook
WEBHOOK_SECRET=your-webhook-secretGOOGLE_API_KEY=YOUR_NEW_API_KEY_HERE
