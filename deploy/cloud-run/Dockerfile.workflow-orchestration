# Dockerfile for Workflow Orchestration Agent
# ===========================================
# ADK Native Master WorkflowAgent for Medical Coordination

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements-cloudrun.txt .
RUN pip install --no-cache-dir -r requirements-cloudrun.txt

# Copy application code
COPY vigia_detect/ ./vigia_detect/
COPY scripts/ ./scripts/
COPY config/ ./config/

# Copy ADK agent entry point
COPY deploy/cloud-run/entrypoints/workflow_orchestration_agent.py ./app.py

# Set environment variables
ENV PYTHONPATH=/app
ENV AGENT_ID=vigia-workflow-orchestration
ENV AGENT_TYPE=WorkflowAgent
ENV ORCHESTRATOR_MODE=master
ENV A2A_REGISTRY_ENDPOINT=https://discovery.vigia-adk.run.app
ENV WORKFLOW_SLA_ENFORCEMENT=true
ENV PORT=8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:${PORT}/health || exit 1

# Run the agent
CMD ["python", "app.py"]