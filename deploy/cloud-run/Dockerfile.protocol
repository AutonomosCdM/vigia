# Dockerfile for Protocol Agent
# ============================
# ADK Native LLMAgent with Medical Protocol Search

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements-cloudrun.txt .
RUN pip install --no-cache-dir -r requirements-cloudrun.txt

# Copy application code
COPY vigia_detect/ ./vigia_detect/
COPY scripts/ ./scripts/
COPY config/ ./config/

# Copy ADK agent entry point
COPY deploy/cloud-run/entrypoints/protocol_agent.py ./app.py

# Create protocol data directory
RUN mkdir -p /data/protocols

# Set environment variables
ENV PYTHONPATH=/app
ENV AGENT_ID=vigia-protocol-agent
ENV AGENT_TYPE=LLMAgent
ENV LLM_MODEL=gemini-1.5-pro
ENV PROTOCOL_DATABASE_PATH=/data/medical_protocols.json
ENV VECTOR_INDEX_PATH=/data/protocol_embeddings
ENV PORT=8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=20s --retries=3 \
    CMD curl -f http://localhost:${PORT}/health || exit 1

# Run the agent
CMD ["python", "app.py"]